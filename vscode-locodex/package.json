        "title": "üõ°Ô∏è G√ºvenlik Taramasƒ±",
        "category": "LocoDex"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "locodex.explain",
          "group": "locodex@1"
        },
        {
          "when": "editorHasSelection",
          "command": "locodex.optimize",
          "group": "locodex@2"
        },
        {
          "when": "editorHasSelection",
          "command": "locodex.review",
          "group": "locodex@3"
        },
        {
          "when": "editorHasSelection",
          "command": "locodex.generateTests",
          "group": "locodex@4"
        },
        {
          "when": "editorHasSelection",
          "command": "locodex.securityScan",
          "group": "locodex@5"
        }
      ],
      "editor/title": [
        {
          "command": "locodex.chat",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "locodex.explain",
          "when": "editorIsOpen"
        },
        {
          "command": "locodex.optimize",
          "when": "editorIsOpen"
        },
        {
          "command": "locodex.review",
          "when": "editorIsOpen"
        },
        {
          "command": "locodex.generateTests",
          "when": "editorIsOpen"
        },
        {
          "command": "locodex.generateDocumentation",
          "when": "editorIsOpen"
        },
        {
          "command": "locodex.fixIssues",
          "when": "editorIsOpen"
        },
        {
          "command": "locodex.securityScan",
          "when": "editorIsOpen"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "locodexChatView",
          "name": "LocoDex AI Chat",
          "when": "locodex.enabled"
        },
        {
          "id": "locodexModelsView",
          "name": "AI Modelleri",
          "when": "locodex.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "locodex",
          "title": "LocoDex AI",
          "icon": "$(robot)"
        }
      ]
    },
    "webviews": [
      {
        "id": "locodexChat",
        "title": "LocoDex Chat"
      }
    ],
    "configuration": {
      "title": "LocoDex AI Assistant",
      "properties": {
        "locodex.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "LocoDex API endpoint URL"
        },
        "locodex.vllmEndpoint": {
          "type": "string", 
          "default": "http://localhost:8080",
          "description": "vLLM endpoint URL"
        },
        "locodex.preferredProvider": {
          "type": "string",
          "enum": ["ollama", "lmstudio", "vllm", "auto"],
          "default": "auto",
          "description": "Tercih edilen AI model saƒülayƒ±cƒ±sƒ±"
        },
        "locodex.model": {
          "type": "string",
          "default": "",
          "description": "Kullanƒ±lacak AI modeli"
        },
        "locodex.maxTokens": {
          "type": "number",
          "default": 1024,
          "minimum": 1,
          "maximum": 4096,
          "description": "Maksimum token sayƒ±sƒ±"
        },
        "locodex.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 2,
          "description": "Model yaratƒ±cƒ±lƒ±k derecesi (0 = deterministik, 2 = √ßok yaratƒ±k)"
        },
        "locodex.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Otomatik kod tamamlama √∂zelliƒüini etkinle≈ütir"
        },
        "locodex.enableSecurityScan": {
          "type": "boolean",
          "default": true,
          "description": "G√ºvenlik taramasƒ± √∂zelliƒüini etkinle≈ütir"
        },
        "locodex.enableCodeReview": {
          "type": "boolean",
          "default": true,
          "description": "Otomatik kod review √∂zelliƒüini etkinle≈ütir"
        },
        "locodex.autoSaveChat": {
          "type": "boolean",
          "default": true,
          "description": "Chat ge√ßmi≈üini otomatik kaydet"
        },
        "locodex.securityLevel": {
          "type": "string",
          "enum": ["low", "medium", "high", "enterprise"],
          "default": "high",
          "description": "G√ºvenlik seviyesi"
        },
        "locodex.enableTelemetry": {
          "type": "boolean",
          "default": false,
          "description": "Kullanƒ±m telemetrisi (tamamen lokal)"
        },
        "locodex.codeLanguages": {
          "type": "array",
          "default": ["javascript", "typescript", "python", "java", "csharp", "cpp", "go", "rust", "php"],
          "description": "Desteklenen programlama dilleri"
        }
      }
    },
    "keybindings": [
      {
        "command": "locodex.openChat",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "locodex.explain",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "locodex.optimize",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorHasSelection"
      },
      {
        "command": "locodex.review",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "locodex.securityScan",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "node scripts/build.js",
    "package": "node scripts/package.js",
    "install-extension": "code --install-extension ./dist/*.vsix",
    "vsce-package": "vsce package",
