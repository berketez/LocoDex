{
  "name": "@locodex/cli",
  "version": "1.0.0",
  "description": "LocoDex Terminal CLI - AI Destekli Yazılım Mühendisliği Platformu",
  "main": "dist/index.js",
  "bin": {
    "locodex": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node18 --format=cjs --banner:js=\"#!/usr/bin/env node\"",
    "build:fast": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node18 --format=cjs --banner:js=\"#!/usr/bin/env node\" --minify",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "ai",
    "cli",
    "locodex",
    "terminal",
    "development",
    "local-models"
  ],
  "dependencies": {
    "@types/ws": "^8.18.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.7",
    "events": "^3.3.0",
    "glob": "^10.4.1",
    "mime-types": "^2.1.4",
    "ora": "^8.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.24",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
