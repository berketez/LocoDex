{
  "name": "locodex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "dist": "npm run build && electron-builder --mac --universal",
    "build-dmg": "./scripts/build-dmg.sh",
    "test": "jest",
    "test:integration": "./scripts/test-integration.sh",
    "electron:dev": "electron electron/main.js",
    "cli": "cd packages/cli && npm run start",
    "cli:build": "cd packages/cli && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "sandbox:start": "docker-compose up -d sandbox",
    "sandbox:logs": "docker-compose logs -f sandbox",
    "setup": "npm install && cd packages/cli && npm install"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "mitt": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "systeminformation": "^5.27.7",
    "tailwind-merge": "^1.14.0",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^37.1.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.6.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.43.1",
    "vite": "^7.0.0",
    "wait-on": "^7.0.1"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.locodex.app",
    "productName": "LocoDex",
    "copyright": "Copyright Â© 2024 LocoDex Team",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "packages/cli/dist/**/*",
      "!node_modules/**/*",
      "!packages/*/node_modules/**/*",
      "!packages/*/src/**/*",
      "!**/*.map",
      "!**/*.test.*",
      "!**/*.spec.*"
    ],
    "asarUnpack": [
      "node_modules/yauzl/**/*",
      "node_modules/systeminformation/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "packages/cli/dist/",
        "to": "cli/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "icon": "assets/icon.icns",
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
