{
  "name": "locodex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:cli\" \"npm run dev:desktop\"",
    "dev:cli": "cd packages/cli && npm run dev",
    "dev:desktop": "vite",
    "build": "npm run build:cli && npm run build:desktop",
    "build:cli": "cd packages/cli && npm run build",
    "build:desktop": "vite build",
    "build:fast": "npm run build:cli && vite build --mode production",
    "build:all": "turbo run build",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:cli": "cd packages/cli && npm run lint",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:desktop\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:desktop && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cli": "cd packages/cli && npm run test",
    "test:all": "turbo run test",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist dist-electron packages/*/dist packages/*/.tsbuildinfo",
    "install:cli": "cd packages/cli && npm install",
    "link:cli": "cd packages/cli && npm link",
    "postinstall": "npm run install:cli"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.43.1",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.14",
    "vitest": "^1.3.0",
    "wait-on": "^7.0.1",
    "rimraf": "^5.0.0"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.locodex.app",
    "productName": "LocoDex",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "!node_modules/**/*",
      "!packages/*/node_modules/**/*",
      "!packages/*/src/**/*",
      "!**/*.map",
      "!**/*.test.*",
      "!**/*.spec.*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

