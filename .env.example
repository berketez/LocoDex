# LocoDex Environment Configuration

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password_here
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_SECRET_KEY=your_grafana_secret_key_here

# vLLM Configuration
# For remote vLLM server (company server):
VLLM_REMOTE_URL=https://your-company-vllm-server.com:8000
VLLM_BUILD_MODE=light  # Use 'light' for remote, 'full' for local GPU

# For local vLLM (if you have GPU):
# VLLM_BUILD_MODE=full
# VLLM_AUTO_LOAD_MODEL=microsoft/DialoGPT-medium
# CUDA_VISIBLE_DEVICES=0

# Deep Research Configuration  
# LOCAL_MODE=true  # Always use local models (Ollama/LM Studio)

# MSSQL Database Configuration
MSSQL_SERVER=host.docker.internal
MSSQL_PORT=1433
MSSQL_DATABASE=master
MSSQL_USER=sa
MSSQL_PASSWORD=YourStrong!Password123
MSSQL_ENCRYPT=true
MSSQL_TRUST_CERT=true

# Development
NODE_ENV=development
LOG_LEVEL=info